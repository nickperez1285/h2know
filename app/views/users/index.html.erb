<p id="notice"><%= notice %></p>

<h1>Listing of Users</h1>

<table>
  <thead >
    <tr >
      <th style = "padding-right: 100px">Name</th>
      <th> Email     </th>
      <th style = "padding-left: 50px">Username</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td style = "padding-left: 50px"><%= user.login %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>

         <td><%= link_to "View H2O usage" , {:controller => "profile", :action => 'index'}%></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

