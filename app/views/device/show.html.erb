
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="device show">
  <h2>Show device</h2>

  <table summary="device detail view">
    <tr>
      <th>Device Number</th>
      <td><%= @device.device_num %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= @device.location%></td>
    </tr>  
 
    <tr>
      <th>Created</th>
      <td><%= @device.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @device.updated_at %></td>
    </tr>
  </table>

</div>

