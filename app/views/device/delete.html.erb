<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="device delete">
  <h2>Delete device</h2>

  <%= form_for(:device, :url => {:action => 'destroy', :id => @device.id}) do |p| %>

    <p>Are you sure you want to permanently delete this post?</p>

    <p class="reference-name"><%= @device.id %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete ") %>
    </div>

  <% end %>
</div>
