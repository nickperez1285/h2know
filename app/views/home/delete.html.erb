<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="posts delete">
  <h2>Delete post</h2>

  <%= form_for(:post, :url => {:action => 'destroy', :id => @post.id}) do |f| %>

    <p>Are you sure you want to permanently delete this post?</p>

    <p class="reference-name"><%= @post.name %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete ") %>
    </div>

  <% end %>
</div>
