
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="posts show">
  <h2>Show Post</h2>

  <table summary="Post detail view">
    <tr>
      <th>Idea</th>
      <td><%= @post.content %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.vote ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @post.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @post.updated_at %></td>
    </tr>
  </table>

</div>
